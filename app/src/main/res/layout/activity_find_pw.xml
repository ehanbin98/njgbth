<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#75bcb7b7"
    tools:context=".FindPwActivity">


    <TextView
        android:id="@+id/findPwTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="냉장고를 부탁해"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/findPwSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/findPwTitle"
        app:layout_constraintStart_toStartOf="@+id/findPwTitle"
        app:layout_constraintTop_toBottomOf="@+id/findPwTitle" />

    <TextView
        android:id="@+id/findPwId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/no_outline"
        android:text="아이디"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPwTitle" />

    <EditText
        android:id="@+id/edtFindPwId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_common_outline"
        android:ems="13"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/findPwId"
        app:layout_constraintTop_toBottomOf="@+id/findPwId" />

    <TextView
        android:id="@+id/findPwName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/no_outline"
        android:text="이름"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/edtFindPwId"
        app:layout_constraintTop_toBottomOf="@+id/edtFindPwId" />

    <EditText
        android:id="@+id/edtFindPwName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_common_outline"
        android:ems="13"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/findPwEmail"
        app:layout_constraintTop_toBottomOf="@+id/findPwEmail" />

    <TextView
        android:id="@+id/findPwEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/no_outline"
        android:text="가입시 입력한 e-mail"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/edtFindPwEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtFindPwEmail" />

    <EditText
        android:id="@+id/edtFindPwEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_common_outline"
        android:ems="13"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/findPwName"
        app:layout_constraintTop_toBottomOf="@+id/findPwName" />

    <Button
        android:id="@+id/btnFindPwFind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#4CAF50"
        android:paddingVertical="15dp"
        android:text="비밀번호 확인하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>