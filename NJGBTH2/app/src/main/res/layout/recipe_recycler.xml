<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <ImageView
        android:id="@+id/imgOfRecipe"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basic" />

    <Button
        android:id="@+id/nameOFRecipe"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Button"
        android:gravity="start"
        android:background="#00FFFFFF"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/heart"
        app:layout_constraintStart_toEndOf="@+id/imgOfRecipe"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/heart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/numOfHeart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/numOfHeart"
        app:layout_constraintTop_toTopOf="@+id/imgOfRecipe"
        app:srcCompat="@drawable/emptyheart" />


    <TextView
        android:id="@+id/numOfHeart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="총 하트 수"
        app:layout_constraintBottom_toBottomOf="@+id/imgOfRecipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameOFRecipe" />


</androidx.constraintlayout.widget.ConstraintLayout>